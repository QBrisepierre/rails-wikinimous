<h1>All articles</h1>
<ul>
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article_path(article.id) %>
    <%= link_to "Delete", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
    </li>
  <% end %>
</ul>

